<% provide(:title, "Login") %>
<div class="center jumbotron">
  <div id= "login_title">
    <h1>Login</h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.text_field :password %>
        <%= f.submit "Login", class: "btn btn-lg btn-primary" %>
      <% end %>

      <p>Need to create an account? <%= link_to "Sign up here", signup_path %></p>
    </div>
  </div>
</div>